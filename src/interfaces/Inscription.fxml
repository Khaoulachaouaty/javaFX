<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="600.0" prefWidth="1200.0" styleClass="background" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ConnexionController">
    <center>
        <AnchorPane prefHeight="600.0" prefWidth="1200.0" styleClass="content" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="user" layoutX="250.0" layoutY="170.0" prefHeight="40.0" prefWidth="273.0" promptText="Nom d'utilisateur" styleClass="user" />
                <PasswordField fx:id="password" layoutX="250.0" layoutY="220.0" prefHeight="40.0" prefWidth="273.0" promptText="Mot de passe" styleClass="password" />
                <TextField fx:id="mail" layoutX="250.0" layoutY="270.0" prefHeight="40.0" prefWidth="272.0" promptText="Adresse e-mail" styleClass="mail" />
                <TextField fx:id="phone" layoutX="250.0" layoutY="320.0" prefHeight="40.0" prefWidth="270.0" promptText="Numéro de téléphone" styleClass="phone" />
                <Button fx:id="bntinsc" layoutX="253.0" layoutY="398.0" mnemonicParsing="false" onAction="#handleSignUp" prefHeight="33.0" prefWidth="264.0" styleClass="button" text="S'inscrire" textOverrun="CLIP" />
            <CheckBox fx:id="confirmCheckbox" layoutX="250.0" layoutY="370.0" mnemonicParsing="false" text="Je confirme que les informations sont correctes" textFill="#fffdfd" />
            </children>
        </AnchorPane>
    </center>
</BorderPane>
